	<property name="host" value="in-v3.mailjet.com" />
	<property name="port" value="587" />
	<property name="username" value="34e3e759ce34045720e43cea3d08f3b0" />
	<property name="password" value="48421182d5fd9fc3e1f7f8fe43cf4bc6" />

	<property name="javaMailProperties">
	   <props>
       	      <prop key="mail.smtp.auth">true</prop>
